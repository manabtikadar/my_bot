<?xml version="1.0"?>
<robot name="my_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <link name="base_link">
    </link>
    
    <xacro:include filename="inertia.urdf.xacro"/>
    xacro:<xacro:include filename="gazebo.xacro"/>
    <joint name="chassis_joint" type="fixed">
        <origin xyz="0.1 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
        <!-- <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/> -->
    </joint>


    <link name="chassis">
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.1">
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
        </xacro:inertial_box>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.4 0.3 0.1"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <!-- <texture filename=""/> -->
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.4 0.3 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="-0.1 0.175 0.0" rpy="-1.57 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
        <!-- <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/> -->
    </joint>

    <link name="left_wheel">
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="">
                <color rgba="0.0 0.0 1.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="-0.1 -0.175 0.0" rpy="1.57 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
        <!-- <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/> -->
    </joint>
    
    <link name="right_wheel">
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="">
                <color rgba="0.0 0.0 1.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="caster_joint" type="fixed">
        <origin xyz="0.1 0.0 -0.05" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="caster"/>
        <!-- <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/> -->
    </joint>

    <link name="caster">
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                 <sphere radius="0.05"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                 <sphere radius="0.05"/>
            </geometry>
        </collision>
    </link>
</robot>